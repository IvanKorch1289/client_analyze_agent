# ============================================================================
# ANALYZE AGENT - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!
# ============================================================================

# Application Settings
APP_NAME=analyze_agent
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# API Keys - External Services
DADATA_API_TOKEN=your_dadata_token_here
DADATA_API_SECRET=your_dadata_secret_here
CASEBOOK_API_KEY=your_casebook_key_here
INFOSFERA_API_KEY=your_infosfera_key_here
PERPLEXITY_API_KEY=your_perplexity_key_here
TAVILY_API_KEY=your_tavily_key_here
OPENROUTER_API_KEY=your_openrouter_key_here

# LLM Configuration
DEFAULT_LLM_MODEL=anthropic/claude-3.5-sonnet
DEFAULT_TEMPERATURE=0.0
MAX_TOKENS=4096

# Database - Tarantool
TARANTOOL_HOST=localhost
TARANTOOL_PORT=3301
TARANTOOL_USER=admin
TARANTOOL_PASSWORD=your_tarantool_password_here

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Security
SECRET_KEY=your_secret_key_here_min_32_chars
API_KEY_SALT=your_api_key_salt_here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Storage
REPORTS_DIR=./reports
LOGS_DIR=./logs
